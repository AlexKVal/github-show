<div>
  <div class="user-header">
    <img class="avatar" src="{{model.avatar_url}}&s=240"
    alt="avatar" height="120" width="120">
    <h1>{{model.name}}</h1>
    <ul class="user-details">
      {{#if model.company}}
        <li>
          {{fa-icon icon="briefcase"}}
          {{model.company}}
        </li>
      {{/if}}

      {{#if model.location}}
        <li>
          {{fa-icon icon="globe"}}
          {{model.location}}
        </li>
      {{/if}}

      {{#if model.blog}}
        <li>
          {{fa-icon icon="link"}}
          <a href="{{model.blog}}" target="_blank">{{model.blog}}</a>
        </li>
      {{/if}}
    </ul>
    <ul class="user-tabs">
      <li class="active">
        {{fa-icon icon="book"}} Repositories <span class="badge">{{model.public_repos}}</span>
      </li>
    </ul>
  </div>
  <ul class="user-repos">
    <li>
      <ul class="repo-info">
        <li>CSS</li>
        <li><i class="fa fa-star"> 151</i></li>
        <li><i class="fa fa-code-fork"> 415</i></li>
        <li><i class="fa fa-bug"> 29</i></li>
      </ul>
      <h3><a href="#TODO">guides</a></h3>
      <p class="description">The source for http://link.com</p>
      <p class="updated">Updated 2015</p>
    </li>
  </ul>
</div>
{{outlet}}
